<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AggiungiFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"

        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintGuide_percent="0.5"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineSX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="30dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineDX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="30dp" />

            <TimePicker
                android:id="@+id/timePicker"
                style="@style/AppTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:numbersBackgroundColor="@color/azzurro"
                android:numbersSelectorColor="@color/arancione"
                android:numbersTextColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nomeSveglia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:boxBackgroundColor="#00FFFFFF"
                app:layout_constraintEnd_toEndOf="@+id/guidelineDX"
                app:layout_constraintStart_toStartOf="@+id/guidelineSX"
                app:layout_constraintTop_toBottomOf="@+id/timePicker"
                tools:ignore="MissingConstraints">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputNomeSveglia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="@string/nomeSveglia"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/ripetizioni"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@id/guidelineDX"
                app:layout_constraintStart_toStartOf="@id/guidelineSX"
                app:layout_constraintTop_toBottomOf="@id/nomeSveglia"
                tools:ignore="MissingConstraints">

                <CheckBox
                    android:id="@+id/lunedi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="L" />

                <CheckBox
                    android:id="@+id/martedi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="M" />

                <CheckBox
                    android:id="@+id/mercoledi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="M" />

                <CheckBox
                    android:id="@+id/giovedi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="G" />

                <CheckBox
                    android:id="@+id/venerdi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="V" />

                <CheckBox
                    android:id="@+id/sabato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="S" />

                <CheckBox
                    android:id="@+id/domenica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="D" />

            </LinearLayout>

            <!-- pulsanti di suono/vibrazione/rinvia -->
            <LinearLayout
                android:id="@+id/impostazioni"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="@id/guidelineDX"
                app:layout_constraintStart_toStartOf="@id/guidelineSX"
                app:layout_constraintTop_toBottomOf="@id/ripetizioni"
                tools:ignore="MissingConstraints">

                <Button
                    android:id="@+id/bottoneSuono"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/sfondoTras"
                    android:text="@string/suono"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/posticipa"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="23.5dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/posticipa"
                    android:textSize="20sp" /><!-- sistemare font-->

            </LinearLayout>

            <!-- pulsanti giochi -->
            <!-- TODO 2 relative layout uno di sinistra e uno di destra per mettere i bottoni simmietrici -->
            <RelativeLayout
                android:id="@+id/giochiClassica"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@id/center"
                app:layout_constraintStart_toStartOf="@id/guidelineSX"
                app:layout_constraintTop_toBottomOf="@id/impostazioni"
                tools:ignore="MissingConstraints">


                <Button
                    android:id="@+id/classica"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:backgroundTint="@color/azzurro"
                    android:text="@string/classica"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:cornerRadius="20dp"
                    app:icon="@drawable/sveglia"
                    app:iconGravity="top"
                    app:iconSize="60dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/giochiSfida"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@id/guidelineDX"
                app:layout_constraintStart_toStartOf="@id/center"
                app:layout_constraintTop_toBottomOf="@id/impostazioni"
                tools:ignore="MissingConstraints">


                <Button
                    android:id="@+id/sfida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:backgroundTint="@color/arancione"
                    android:text="@string/sfida"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:cornerRadius="20dp"
                    app:icon="@drawable/puzzle"
                    app:iconGravity="top"
                    app:iconSize="60dp" />
            </RelativeLayout>

            <!-- pulsanti di invio/annulla -->
            <!-- TODO non sono perfette le misure dei pulsanti -->


            <RelativeLayout
                android:id="@+id/bottoneAnnulla"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/center"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@id/guidelineSX"
                app:layout_constraintTop_toBottomOf="@+id/giochiClassica"
                tools:ignore="MissingConstraints">

                <Button
                    android:id="@+id/annulla"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:backgroundTint="@color/sfondoTras"
                    android:text="@string/annulla"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bottoneConferma"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/guidelineDX"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@id/center"
                app:layout_constraintTop_toBottomOf="@+id/giochiSfida"
                tools:ignore="MissingConstraints">

                <Button
                    android:id="@+id/conferma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:backgroundTint="@color/sfondoTras"
                    android:text="@string/conferma"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </RelativeLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>