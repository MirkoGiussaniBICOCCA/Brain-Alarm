<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SuoniFragment">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                        <LinearLayout
                            android:id="@+id/linearLayout2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="30dp"
                            android:layout_marginTop="84dp"
                            android:layout_marginEnd="30dp"
                            android:background="@drawable/background_navbar"
                            android:orientation="vertical"
                            android:paddingBottom="30dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.493"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">


                                <TextView
                                    android:id="@+id/iTuoiSuoni"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="28dp"
                                    android:text="@string/iTuoiSuoni"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="30dp"
                                    android:layout_marginBottom="15dp"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/textClassica"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:layout_marginStart="15dp"
                                            android:textSize="24dp"
                                            android:textColor="@color/white"
                                            android:text="@string/classicaSuono" />

                                        <ImageButton
                                            android:id="@+id/imageButtonClassica"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:minWidth="50dp"
                                            android:minHeight="50dp"
                                            android:layout_marginEnd="25dp"
                                            android:background="@drawable/pallino"
                                            android:backgroundTint="@color/fucsia"
                                            android:src="@drawable/play" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/textPianoforte"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:layout_marginStart="15dp"
                                            android:textSize="24dp"
                                            android:textColor="@color/white"
                                            android:text="@string/pianoforte" />

                                        <ImageButton
                                            android:id="@+id/imageButtonPianoforte"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:minWidth="50dp"
                                            android:minHeight="50dp"
                                            android:layout_marginEnd="25dp"
                                            android:background="@drawable/pallino"
                                            android:backgroundTint="@color/fucsia"
                                            android:src="@drawable/play" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/textRadar"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:layout_marginStart="15dp"
                                            android:textSize="24dp"
                                            android:textColor="@color/white"
                                            android:text="@string/radar" />

                                        <ImageButton
                                            android:id="@+id/imageButtonRadar"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:minWidth="50dp"
                                            android:minHeight="50dp"
                                            android:layout_marginEnd="25dp"
                                            android:background="@drawable/pallino"
                                            android:backgroundTint="@color/fucsia"
                                            android:src="@drawable/play" />

                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/textDolce"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:layout_marginStart="15dp"
                                            android:textSize="24dp"
                                            android:textColor="@color/white"
                                            android:text="@string/dolce" />

                                        <ImageButton
                                            android:id="@+id/imageButtonDolce"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:minWidth="50dp"
                                            android:minHeight="50dp"
                                            android:layout_marginEnd="25dp"
                                            android:background="@drawable/pallino"
                                            android:backgroundTint="@color/fucsia"
                                            android:src="@drawable/play" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/textDigitale"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:layout_marginStart="15dp"
                                            android:textSize="24dp"
                                            android:textColor="@color/white"
                                            android:text="@string/digitale" />

                                        <ImageButton
                                            android:id="@+id/imageButtonDigitale"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:minWidth="50dp"
                                            android:minHeight="50dp"
                                            android:layout_marginEnd="25dp"
                                            android:background="@drawable/pallino"
                                            android:backgroundTint="@color/fucsia"
                                            android:src="@drawable/play" />

                                </LinearLayout>

                        </LinearLayout>

                        <Button
                            android:id="@+id/maps"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="131dp"
                            android:layout_marginEnd="30dp"
                            android:backgroundTint="@color/azzurro"
                            android:text="maps"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

                </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>