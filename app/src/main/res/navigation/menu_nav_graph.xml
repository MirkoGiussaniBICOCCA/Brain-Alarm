<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_nav_graph"
    app:startDestination="@id/impostazioniFragment">

    <fragment
        android:id="@+id/impostazioniFragment"
        android:name="it.unimib.brain_alarm.ImpostazioniFragment"
        android:label="fragment_impostazioni"
        tools:layout="@layout/fragment_impostazioni">
    </fragment>

    <fragment
        android:id="@+id/suoniFragment"
        android:name="it.unimib.brain_alarm.SuoniFragment"
        android:label="fragment_suoni"
        tools:layout="@layout/fragment_suoni" >
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="it.unimib.brain_alarm.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_aggiungiActivity"
            app:destination="@id/aggiungiActivity" />
    </fragment>
    <activity
        android:id="@+id/aggiungiActivity"
        android:name="it.unimib.brain_alarm.AggiungiActivity"
        android:label="activity_aggiungi"
        tools:layout="@layout/activity_aggiungi" />

    <fragment
        android:id="@+id/riposoFragment"
        android:name="it.unimib.brain_alarm.riposoFragment"
        android:label="fragment_riposo"
        tools:layout="@layout/fragment_riposo" >
    </fragment>

    <fragment
        android:id="@+id/carrieraFragment"
        android:name="it.unimib.brain_alarm.carrieraFragment"
        android:label="fragment_carriera"
        tools:layout="@layout/fragment_carriera" >
    </fragment>



</navigation>