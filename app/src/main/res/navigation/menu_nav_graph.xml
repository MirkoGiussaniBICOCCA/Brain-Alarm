<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/impostazioniFragment"
        android:name="it.unimib.brain_alarm.ImpostazioniFragment"
        android:label="fragment_impostazioni"
        tools:layout="@layout/fragment_impostazioni">
    </fragment>

    <fragment
        android:id="@+id/suoniFragment"
        android:name="it.unimib.brain_alarm.SuoniFragment"
        android:label="fragment_suoni"
        tools:layout="@layout/fragment_suoni" >
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="it.unimib.brain_alarm.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_aggiungiActivity"
            app:destination="@id/aggiungiActivity" />
        <action
            android:id="@+id/action_homeFragment_to_svegliaActivity"
            app:destination="@id/svegliaActivity" />
    </fragment>
    <activity
        android:id="@+id/aggiungiActivity"
        android:name="it.unimib.brain_alarm.AggiungiActivity"
        android:label="activity_aggiungi"
        tools:layout="@layout/activity_aggiungi">
    </activity>
    <activity
        android:id="@+id/svegliaActivity"
        android:name="it.unimib.brain_alarm.ui.SvegliaActivity"
        android:label="SvegliaActivity"
        tools:layout="@layout/activity_sveglia">
    </activity>


    <fragment
        android:id="@+id/newsFragment"
        android:name="it.unimib.brain_alarm.NewsFragment"
        android:label="fragment_news"
        tools:layout="@layout/fragment_news" >
        <!--
        <action
            android:id="@+id/action_newsFragment_to_impostazioniFragment"
            app:destination="@id/impostazioniFragment" />
        -->
    </fragment>

    <fragment
        android:id="@+id/profiloFragment"
        android:name="it.unimib.brain_alarm.ProfiloFragment"
        android:label="fragment_profilo"
        tools:layout="@layout/fragment_profilo" >
    </fragment>


</navigation>